@model DateTime?
<input id="@Html.IdForModel()" name="@Html.NameForModel()" value="@(Model > DateTime.MinValue || Model.HasValue ? Model.Value.ToString(GS.Core.CommonHelper.DATE_FORMAT_VN) : null)" />
<script>
    $(document).ready(function () {
        $("#@Html.IdForModel()").kendoDatePicker({
              format: "@(GS.Core.CommonHelper.DATE_FORMAT_VN)",
                culture:"vi-VN",
        });
    });
</script>