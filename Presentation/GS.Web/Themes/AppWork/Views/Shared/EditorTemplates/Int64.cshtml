@model Int64
<input asp-for="@Model" />
@{
    var postfix = "";
    if (ViewData.ContainsKey("postfix") && ViewData["postfix"] != null)
    {
        postfix = ViewData["postfix"].ToString();
    }
}
<script>
   
    $(document).ready(function() {
        $("#@Html.IdForModel()").kendoNumericTextBox({
            format: "###,###,###,##0",
            decimals: 0, //always display 4 digits
            culture: "vi-VN",
        });
    });
</script>
