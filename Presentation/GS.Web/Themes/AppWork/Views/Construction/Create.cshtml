@model ConstructionModel

@{
    //page title
    ViewBag.Title = T("AppWork.Contracts.Construction.AddNew").Text;
    //active menu item (system name)
    Html.SetActiveMenuItemSystemName("Category_construction");
}

<form asp-controller="Construction" asp-action="Create" method="post" id="constructionForm">
    <div class="card mb-4">
        <h6 class="card-header">
            @T("AppWork.Contracts.Construction.AddNew")
            <small>
                <i class="fa fa-arrow-circle-left"></i>
                <a asp-action="List">@T("AppWork.Contracts.ConstructionType.BackToList")</a>
            </small>
            <button type="submit" name="save-continue" class="btn btn-secondary" style="float:right;margin-right:5px;">
                <i class="far fa-save" style="margin-right:5px;">
                </i>@T("Admin.Common.SaveContinue")
            </button>
            <button type="submit" name="save" class="btn btn-success" style="float:right;margin-right:5px;" id="btnAddConstruction">
                <i class="fas fa-save" style="margin-right:5px;"></i>
                @T("Admin.Common.Save")
            </button>
        </h6>
        <div class="card-body">
            @await Html.PartialAsync("_CreateOrUpdate", Model)
        </div>
    </div>
</form>
<script>
    $(document).ready(function () {
        $("#constructionForm").submit(function () {
            $("#btnAddConstruction").attr("disabled", "disabled");
        });
    });
</script>
