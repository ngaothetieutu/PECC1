@model ContractModel
@using GS.Core.Domain.Contracts;
    @using GS.Services.Customers
    @using GS.Core

    @inject IWorkContext workContext
    @inject ICustomerService customerService
    <div class="col-sm-6 col-xl-4">
        <div class="card mb-4">
            <div class="card-body d-flex justify-content-between align-items-start pb-3">
                <div>
                    <a href="Detail?guid=@Model.ContractGuid" class="text-dark text-big font-weight-semibold">@Model.Name</a>                   
                        <span class="badge badge-success align-text-bottom ml-1">@T("appwork.contract.contractstatus.approved")</span>                    

                    <div class="text-muted small mt-1">10 @T("appwork.tasks.status.opened"), 5 @T("appwork.tasks.status.complete")</div>
                </div>
                <div class="btn-group project-actions">
                    <button type="button" class="btn btn-sm btn-default icon-btn borderless btn-round md-btn-flat dropdown-toggle hide-arrow" data-toggle="dropdown">
                        <i class="ion ion-ios-more"></i>
                    </button>
                    <div class="dropdown-menu dropdown-menu-right">
                        <a class="dropdown-item" href="Detail?guid=@Model.ContractGuid"> @T("admin.common.detail")</a>
                        <a class="dropdown-item" href="Edit?guid=@Model.ContractGuid">@T("admin.common.Edit")</a>
                        @*<a class="dropdown-item" href="javascript:void(0)">@T("AppWork.Contracts.Remove")</a>*@
                    </div>
                </div>
            </div>
            <div class="progress rounded-0" style="height: 3px;">
                <div class="progress-bar" style="width: @Model.ProgressNum%;"></div>
            </div>
            <div class="card-body small pt-2 pb-0">
                <strong>@Model.ProgressNum%</strong> @T("appwork.contracts.status.complete")
            </div>
            <div class="card-body pb-3">
                @Model.Description
            </div>
            <div class="card-body pt-0">
                <div class="row">
                    <div class="col">
                        <div class="text-muted small">@T("AppWork.Contracts.Contract.Fields.StartDate")</div>
                        <div class="font-weight-bold">@Model.StartDate.toDateVNString()</div>
                    </div>
                    <div class="col">
                        <div class="text-muted small">@T("AppWork.Contracts.Contract.Fields.EndDate")</div>
                        <div class="font-weight-bold">@Model.EndDate.toDateVNString()</div>
                    </div>
                </div>
            </div>
            <hr class="m-0">
            <div class="card-body py-3">
                <div class="text-muted small mb-2">@T("AppWork.Contracts.Team")</div>
                <div class="d-flex flex-wrap">
                    @if (Model.contractResourceModels.Count > 0)
                    {
                        foreach (var m in Model.contractResourceModels)
                        {
                            <a href="javascript:void(0)" class="d-block mr-1 mb-1">
                                <div class="media align-items-center">
                                    <img src="@m.CustomerAvatarUrl" class="ui-w-30 rounded-circle" alt="">
                                </div>
                            </a>
                        }
                    }

                    @*<a href="javascript:void(0)" class="d-block mr-1 mb-1">
                        <img src="~/Themes/AppWork/Content/assets/img/avatars/2-small.png" alt="" class="ui-w-30 rounded-circle">
                    </a>*@
                </div>
            </div>
        </div>
    </div>
