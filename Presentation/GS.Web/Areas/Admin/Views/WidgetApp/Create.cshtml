@using GS.Web.Areas.Admin.Models.WidgetApps
@model WidgetAppModel

<form asp-controller="WidgetApp" asp-action="Create" method="post" id="widgetApp-form">
    <div class="content-header clearfix">
        <h1 class="pull-left">
            @T("Admin.WidgetApps.WidgetApp.AddNew")
            <small>
                <i class="fa fa-arrow-circle-left"></i>
                <a asp-action="List">@T("Admin.WidgetApps.WidgetApp.BackToList")</a>
            </small>
        </h1>
        <div class="pull-right">
            <button type="submit" name="save" class="btn bg-blue">
                <i class="fa fa-floppy-o"></i>
                @T("Admin.Common.Save")
            </button>
        </div>
    </div>
    @await Html.PartialAsync("_CreateOrUpdate", Model)
</form>